{
    "files.associations": {
        "iostream": "cpp",
        "intrinsics.h": "c",
        "ostream": "cpp",
        "vector": "cpp"
    },
    "editor.formatOnPaste": true,
    "editor.formatOnSave": true,
    "editor.formatOnType": true,
    "python.analysis.inlayHints.callArgumentNames": "partial",
    "python.analysis.inlayHints.functionReturnTypes": true,
    "python.analysis.inlayHints.pytestParameters": true,
    "python.analysis.inlayHints.variableTypes": true,
    "python.analysis.autoImportCompletions": true,
    "python.analysis.autoFormatStrings": true,
    "python.analysis.completeFunctionParens": true,
    "python.languageServer": "Pylance",
    "clangd.checkUpdates": true,
    "clang-format.executable": "/usr/local/llvm/bin/clang-format",
    "cmake.options.statusBarVisibility": "icon",
    "C_Cpp.errorSquiggles": "Enabled",
    "C_Cpp.intelliSenseEngineFallback": "Enabled",
    "C_Cpp.intelliSenseEngine": "Enabled",
    "editor.quickSuggestions": {
        "other": true,
        "comments": false,
        "strings": true
    },
    "C_Cpp.autocomplete": "Disabled",
    "C_Cpp.clang_format_path": "/usr/local/llvm/bin/clang-format",
    "C_Cpp.clang_format_style": "file",
    "clangd.path": "/usr/local/llvm/bin/clangd",
    "C_Cpp.clangTidy.enabled": true,
    "C_Cpp.clangTidy.path": "${workspaceFolder}/.clang-tidy",
    "C_Cpp.clangTidy.checks": "cppcoreguidelines-*,performance-*,bugprone-*,portability-*,modernize-*,google-*",
    "C_Cpp.clangTidy.args": [
        "--fix",
        "--fix-errors",
        "--export-fixes=fixes.yaml"
    ],
    "C_Cpp.clangTidy.headerFilter": ".*",
    "C_Cpp.clangTidy.useBuildPath": false,
    "clangd.arguments": [
        "-Wno-unused-variable",
        "-Wno-shadow",
        "-Wshadow-field-in-constructor-modified",
        "-Wshadow-ivar",
        "-Wno-implicit-function-declaration",
        "-Wno-switch",
        "-Wno-parentheses",
        "-Wbitwise-op-parentheses",
        "-Wdangling-else",
        "-Wlogical-not-parentheses",
        "-Wlogical-op-parentheses",
        "-Woverloaded-shift-op-parentheses",
        "-Wparentheses-equality",
        "-Wshift-op-parentheses",
        "--log=verbose",
        "--pretty",
        "--all-scopes-completion",
        "--completion-style=bundled",
        "--cross-file-rename",
        "--header-insertion=iwyu",
        "--header-insertion-decorators",
        "--background-index",
        "-j=2",
        "--pch-storage=disk",
        "--function-arg-placeholders=false",
        "--compile-commands-dir=build"
    ]
}